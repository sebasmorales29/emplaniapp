    <!-- Role Switcher JavaScript (idéntico a tu versión; no se toca) -->
    <script>
        $(document).ready(function() {
            if ($('#role-display').length === 0) {
                console.error('Container #role-display not found!');
                return;
            }
            initializeRoleSwitcher();
        });

        function initializeRoleSwitcher() {
            $.ajax({
                url: '@Url.Action("GetUserRoleInfo", "DatosPersonales")',
                type: 'GET',
                success: function(data) {
                    if (data.success) {
                        updateRoleDisplay(data);
                    } else {
                        console.log('Error al obtener roles:', data.message);
                    }
                },
                error: function(xhr, status, error) {
                    console.log('Error al cargar información de roles:', status, error);
                }
            });
        }

        function updateRoleDisplay(roleInfo) {

            var container = $('#role-display');
            if (roleInfo.hasMultipleRoles) {
                var dropdownHtml = '<div class="dropdown" style="display: inline-block;">' +
                    '<a href="#" class="dropdown-toggle btn btn-light-light text-secondary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" ' +
                    'style="font-size:16px; text-decoration: none; padding: 5px 10px; border-round:6px; transition: all 0.3s ease;" > ' +
                    '<i class="bi bi-caret-down-fill"></i>  '+
                    roleInfo.activeRole +
                    '</a>' +
                    '<ul class="dropdown-menu  style= "min-width: 200px; border-radius: 8px; margin-top: 5px;" >'; // style="background-color: #4682A9; border: 1px solid #3a6b8a; min-width: 160px; border-radius: 8px; margin-top: 5px;"
                roleInfo.availableRoles.forEach(function(role) {
                    var isActive = role === roleInfo.activeRole;
                    var checkIcon = isActive ? '<i class="bi bi-check text-primary" style="margin-right: 8px;"></i> ' : '<span style="margin-right: 20px;"></span>';
                    var fontWeight = isActive ? 'font-weight: medium;' : '';
                    var backgroundColor = isActive ? 'background-color: #E9E9FD;' : '';
                    dropdownHtml += '<li class="row">' +
                        '<a href="#" class="dropdown-menu-item" onclick="switchRole(\'' + role + '\')" ' +
                        'style="color: gray; display: block; text-decoration: none; font-size:16px;' + fontWeight + backgroundColor + ' border-radius: 6px; margin: 2px 6px; transition: all 0.2s ease;" ' +
                        'onmouseover="if(\'' + role + '\' !== \'' + roleInfo.activeRole + '\') this.style.backgroundColor=\'#E9E9FD\'" ' +
                        'onmouseout="this.style.backgroundColor=\'' + (isActive ? '#E9E9FD' : 'transparent') + '\'">' +
                        checkIcon + role +
                        '</a>' +
                        '</li>';
                });
                dropdownHtml += '</ul></div>';
                container.html(dropdownHtml);
                setTimeout(function() {
                    var dropdownElement = container.find('.dropdown-toggle');
                    dropdownElement.on('click', function(e) {
                        e.preventDefault();
                        var menu = $(this).next('.dropdown-menu');
                        menu.toggle();
                    });
                }, 100);
            } else {
                container.html(roleInfo.activeRole);
            }
        }

        window.switchRole = function(newRole) {
            $('.dropdown-menu').hide();
            var container = $('#role-display');
            var originalContent = container.html();
            container.html('<i class="bi bi-arrow-repeat text-secondary"></i> Cambiando...');
            $.ajax({
                url: '@Url.Action("SwitchRole", "DatosPersonales")',
                type: 'POST',
                data: {
                    role: newRole,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(data) {
                    if (data.success) {
                        container.html(data.newRole);
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Index", "Home")';
                        }, 500);
                    } else {
                        container.html(originalContent);
                        alert('Error: ' + data.message);
                    }
                },
                error: function(xhr, status, error) {
                    container.html(originalContent);
                    alert('Error al cambiar el rol: ' + error);
                }
            });
        };

        function verificarCambiosRoles() {
            if ($('#role-switcher-container').length > 0) {
                $.ajax({
                    url: '@Url.Action("VerificarCambiosRoles", "DatosPersonales")',
                    type: 'GET',
                    cache: false,
                    success: function(data) {
                        if (data.success && data.hasChanges) {
                            if (data.newRoles.length === 0) {
                                alert('Sus permisos han sido modificados. Será redirigido al inicio de sesión.');
                                window.location.href = '@Url.Action("Login", "Account")';
                                return;
                            }
                            window.location.href = '@Url.Action("Index", "Home")';
                        }
                    }
                });
            }
        }

        @if (Request.IsAuthenticated)
        {
            <text>
            $(document).ready(function() {
                verificarCambiosRoles();
            });
            setInterval(verificarCambiosRoles, 10000);
            $(window).on('focus', function() { verificarCambiosRoles(); });
            </text>
        }
    </script>
