        /* "Salir" como link-botón */
        .navbar .btn.btn-link.nav-link {
            color: #fff !important;
            border-radius: 10px;
        }

            .navbar .btn.btn-link.nav-link:hover,
            .navbar .btn.btn-link.nav-link:focus {
                background: rgba(255,255,255,.24);
                box-shadow: 0 0 0 3px rgba(255,255,255,.18);
                text-decoration: none;
                outline: none;
            }

        /* Validaciones */
        .validation-summary, .validation-summary-errors {
            background: linear-gradient(135deg,var(--danger-bg) 0%,var(--danger-bg2) 100%);
            color: var(--danger);
            padding: 12px 14px;
