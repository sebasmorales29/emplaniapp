@{
    // Evitar ?. para compatibilidad con C# 5
    var claimsIdentity = (User != null) ? User.Identity as ClaimsIdentity : null;

    Claim idEmpleadoClaim = null;
    if (claimsIdentity != null)
    {
        idEmpleadoClaim = claimsIdentity.FindFirst("idEmpleado");
    }
    var idEmpleado = (idEmpleadoClaim != null) ? idEmpleadoClaim.Value : null;

    // Obtener todos los roles del usuario
    var userRoles = RoleHelper.GetAllUserRoles();
    var primaryRole = RoleHelper.GetPrimaryRole();
    var hasMultipleRoles = RoleHelper.HasMultipleRoles();

    // Funciones de verificación de roles (sistema unificado)
    Func<string, bool> hasRole = role => RoleHelper.HasRole(role);
    Func<string[], bool> hasAnyRole = roles => RoleHelper.HasAnyRole(roles);
