            --danger-bg: #fee2e2;
            --danger-bg2: #fecaca;
            --danger: #b91c1c;
            --radius-card: 20px;
            --radius-el: 10px;
        }

        /* Tipografía + base */
        html {
            font-size: 16px;
        }

        html, body {
            height: 100%;
