    <!-- Script para manejar logout -->
    <script>
        $(document).ready(function() {
            // Manejar clic del botón de logout
            $('#logoutButton').on('click', function(e) {
                console.log('🔍 DIAGNÓSTICO: Botón de logout presionado');
                
                // ✨ NUEVO: Mostrar modal de confirmación en lugar de confirm nativo
                e.preventDefault();
                $('#logoutConfirmModal').modal('show');
                return false;
            });
            
            // ✨ NUEVO: Manejar cancelación del logout
            $('#cancelLogoutBtn').on('click', function() {
                console.log('🔍 DIAGNÓSTICO: Logout cancelado por el usuario');
                $('#logoutConfirmModal').modal('hide');
            });
            
            // ✨ NUEVO: Manejar confirmación del logout
            $('#confirmLogoutBtn').on('click', function() {
                console.log('🔍 DIAGNÓSTICO: Usuario confirmó logout, enviando formulario...');
                
                // Deshabilitar botón para evitar doble envío
                var btnConfirm = $(this);
                btnConfirm.prop('disabled', true).html('<i class="bi bi-hourglass-split me-2"></i>Cerrando sesión...');
                
                // Mostrar mensaje de progreso
                var originalTitle = $('#logoutConfirmModalLabel').text();
                $('#logoutConfirmModalLabel').html('<i class="bi bi-hourglass-split me-2"></i>Cerrando Sesión...');
                
                // Cerrar modal después de un breve delay
                setTimeout(function() {
                    $('#logoutConfirmModal').modal('hide');
                    
                    // Restaurar título original
                    setTimeout(function() {
                        $('#logoutConfirmModalLabel').html(originalTitle);
                        btnConfirm.prop('disabled', false).html('<i class="bi bi-door-open-fill me-2"></i>Cerrar Sesión');
                    }, 500);
                    
                    // Enviar formulario
                    $('#logoutFormLayout').submit();
                }, 1000);
            });
            
            // ✨ NUEVO: Manejar envío del formulario de logout
            $('#logoutFormLayout').on('submit', function(e) {
                console.log('🔍 DIAGNÓSTICO: Formulario de logout enviado');
                return true;
            });
            
            // ✨ NUEVO: Restaurar estado del modal cuando se cierre
            $('#logoutConfirmModal').on('hidden.bs.modal', function () {
                // Restaurar título original
                $('#logoutConfirmModalLabel').html('<i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Cierre de Sesión');
                
                // Restaurar botón de confirmación
                $('#confirmLogoutBtn').prop('disabled', false).html('<i class="bi bi-door-open-fill me-2"></i>Cerrar Sesión');
            });
        });
    </script>

