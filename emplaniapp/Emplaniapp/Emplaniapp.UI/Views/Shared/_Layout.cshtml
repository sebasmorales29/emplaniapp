@using Microsoft.AspNet.Identity
@using System.Security.Claims
@using Emplaniapp.UI.Helpers

@{
    // Evitar ?. para compatibilidad con C# 5
    var claimsIdentity = (User != null) ? User.Identity as ClaimsIdentity : null;

    Claim idEmpleadoClaim = null;
    if (claimsIdentity != null)
    {
        idEmpleadoClaim = claimsIdentity.FindFirst("idEmpleado");
    }
    var idEmpleado = (idEmpleadoClaim != null) ? idEmpleadoClaim.Value : null;

    // Obtener todos los roles del usuario
    var userRoles = RoleHelper.GetAllUserRoles();
    var primaryRole = RoleHelper.GetPrimaryRole();
    var hasMultipleRoles = RoleHelper.HasMultipleRoles();

    // Funciones de verificación de roles (sistema unificado)
    Func<string, bool> hasRole = role => RoleHelper.HasRole(role);
    Func<string[], bool> hasAnyRole = roles => RoleHelper.HasAnyRole(roles);
    Func<string, bool> doesNotHaveRole = role => RoleHelper.DoesNotHaveRole(role);
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="es" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Suplidora Royal Ltda.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* === Paleta / tokens === */
        :root {
            --brand-primary: #0f6cf2;
            --brand-secondary: #0a53bf;
            --brand-bg: #4682A9; /* color de tu navbar */
            --brand-bg-gradient: linear-gradient(135deg,var(--brand-primary),var(--brand-secondary));
            --text: #1f2937;
            --muted: #6b7280;
            --ring: rgba(15,108,242,.45);
            --card-bg: #ffffff;
            --card-shadow: rgba(31,41,55,.10);
            --danger-bg: #fee2e2;
            --danger-bg2: #fecaca;
            --danger: #b91c1c;
            --radius-card: 20px;
            --radius-el: 10px;
        }

        /* Tipografía + base */
        html {
            font-size: 16px;
        }

        html, body {
            height: 100%;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Arial,"Helvetica Neue",sans-serif;
            color: var(--text);
            background: radial-gradient(1000px 600px at -10% -20%,rgba(90,155,213,.18),transparent 60%), radial-gradient(800px 400px at 110% 10%,rgba(74,135,199,.15),transparent 60%), linear-gradient(180deg,#f7f9ff 0%,#f3f6fc 100%);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* ===== NAVBAR ===== */
        #main-navbar {
            border: 0;
            background: transparent;
            padding: 8px 0;
        }
            /* NO seteamos background aquí para NO pisar tu color inline #4682A9 */
            #main-navbar > .container {
                border-radius: 50px !important;
                padding: 10px 25px !important;
                box-shadow: 0 10px 24px var(--card-shadow) !important;
                backdrop-filter: saturate(1.2);
            }

            /* Marca */
            #main-navbar .navbar-brand {
                font-weight: 800;
                letter-spacing: .2px;
                line-height: 1.1;
                margin-right: 14px;
                background: linear-gradient(135deg,#ffffff,#e6f0fa);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                /* Fallback por si el navegador no soporta el clip */
                color: #fff;
                text-shadow: 0 1px 0 rgba(0,0,0,.06);
            }

            /* Links */
            #main-navbar .nav-link,
            #main-navbar .navbar-nav > li > a {
                color: #fff !important;
                font-weight: 600;
                border-radius: 12px;
                padding: 10px 12px;
                margin: 6px 6px;
                transition: all .18s ease;
                text-decoration: none;
                outline: none;
            }

                #main-navbar .nav-link:hover,
                #main-navbar .navbar-nav > li > a:hover,
                #main-navbar .nav-link:focus,
                #main-navbar .navbar-nav > li > a:focus {
                    color: #fff !important;
                    background: rgba(255,255,255,.24);
                    box-shadow: 0 0 0 3px rgba(255,255,255,.18);
                    text-decoration: none;
                }

                #main-navbar .navbar-nav > li.active > a,
                #main-navbar .navbar-nav > li > a.active {
                    background: rgba(255,255,255,.30);
                    color: #fff !important;
                    box-shadow: inset 0 0 0 1px rgba(255,255,255,.28),0 6px 16px rgba(0,0,0,.12);
                }

            #main-navbar .navbar-user {
                display: inline-flex;
                align-items: center;
                gap: .5rem;
                color: #fff !important;
            }

        /* Dropdown del role switcher (usa tu azul) */
        #role-display .dropdown-menu {
            background-color: #4682A9;
            border: 1px solid #3a6b8a;
            border-radius: 10px;
            min-width: 180px;
            padding: 6px 0;
            box-shadow: 0 12px 30px rgba(0,0,0,.18);
        }

            #role-display .dropdown-menu > li > a {
                color: #fff;
                padding: 10px 14px;
                border-radius: 8px;
                margin: 2px 6px;
                transition: background .12s ease, transform .12s ease;
            }

                #role-display .dropdown-menu > li > a:hover,
                #role-display .dropdown-menu > li > a:focus {
                    background: rgba(255,255,255,.20);
                    transform: translateX(2px);
                    text-decoration: none;
                    outline: none;
                }

        /* ===== CONTENIDO ===== */
        .container.body-content {
            background: var(--card-bg);
            border-radius: var(--radius-card);
            box-shadow: 0 15px 40px var(--card-shadow);
            padding: 24px 26px 30px;
            margin-top: 22px;
            margin-bottom: 26px;
        }

        hr {
            border-color: #e5e7eb;
            opacity: .7;
        }

        .container.body-content footer p {
            color: var(--muted);
            margin: 0;
        }

        /* Controles */
        .form-control {
            border-radius: var(--radius-el);
            border: 2px solid #e5e7eb;
            box-shadow: none;
            transition: all .15s ease;
        }

            .form-control:hover {
                border-color: #d7dce2;
            }

            .form-control:focus {
                border-color: var(--brand-primary);
                box-shadow: 0 0 0 3px rgba(15,108,242,.20);
                outline: none;
            }

        /* Botón primario (gradiente) */
        .btn-primary, .btn.btn-primary {
            background: var(--brand-bg-gradient);
            border: 0;
            font-weight: 700;
            box-shadow: 0 8px 20px rgba(15,108,242,.35);
            border-radius: 12px;
            transition: transform .06s ease, filter .12s ease, box-shadow .12s ease;
        }

            .btn-primary:hover, .btn.btn-primary:hover {
                filter: brightness(1.05);
            }

            .btn-primary:active, .btn.btn-primary:active {
                transform: translateY(1px);
            }

        /* "Salir" como link-botón */
        .navbar .btn.btn-link.nav-link {
            color: #fff !important;
            border-radius: 10px;
        }

            .navbar .btn.btn-link.nav-link:hover,
            .navbar .btn.btn-link.nav-link:focus {
                background: rgba(255,255,255,.24);
                box-shadow: 0 0 0 3px rgba(255,255,255,.18);
                text-decoration: none;
                outline: none;
            }

        /* Validaciones */
        .validation-summary, .validation-summary-errors {
            background: linear-gradient(135deg,var(--danger-bg) 0%,var(--danger-bg2) 100%);
            color: var(--danger);
            padding: 12px 14px;
            border-left: 4px solid #ef4444;
            border-radius: 10px;
            margin-bottom: 18px;
        }

        .field-validation-error {
            color: #ef4444;
            font-size: 12px;
            margin-top: 6px;
            font-weight: 600;
        }

        /* Accesibilidad */
        a:focus-visible, button:focus-visible,
        .nav-link:focus-visible, .navbar-nav > li > a:focus-visible,
        input:focus-visible, select:focus-visible, textarea:focus-visible {
            outline: none;
            box-shadow: 0 0 0 3px var(--ring) !important;
            border-radius: 10px;
        }

        /* Utilidades */
        .spin {
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width:768px) {
            #main-navbar .navbar-brand {
                font-size: 18px;
            }

            .container.body-content {
                margin: 12px 8px 20px;
                padding: 18px;
                border-radius: 16px;
            }
        }

        /* Extras opcionales */
        .btn-accion-prim {
            background: var(--brand-bg-gradient);
            border: 0;
            font-weight: 400;
            color: #fff;
            box-shadow: 0 8px 10px rgba(74,135,199,.10);
            border-radius: 6px;
            transition: transform .06s ease, filter .12s ease, box-shadow .12s ease;
        }

            .btn-accion-prim:hover {
                filter: brightness(1.05);
                color: #fff;
            }

            .btn-accion-prim:active {
                transform: translateY(1px);
                color: #fff;
            }

        .btn-accion-danger {
            background: linear-gradient(135deg,#E36869,#D05556);
            border: 0;
            font-weight: 400;
            color: #fff;
            box-shadow: 0 8px 10px rgba(146,50,51,.20);
            border-radius: 6px;
            transition: transform .06s ease, filter .12s ease, box-shadow .12s ease;
        }

            .btn-accion-danger:hover {
                filter: brightness(1.05);
                color: #fff;
            }

            .btn-accion-danger:active {
                transform: translateY(1px);
                color: #fff;
            }

        .titulo {
            font-size: 40px;
            font-weight: 700;
            padding-bottom: 6px;
        }

        .subtitulo {
            font-size: 30px;
            font-weight: 500;
            padding-bottom: 4px;
        }
    </style>



</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" id="main-navbar">
        <div class="container" style="background-color: #4682A9; border-radius: 50px; padding: 10px 25px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <div>
                    <div>Suplidora</div>
                    <div>Royal Ltda.</div>
                </div>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (hasRole("Administrador"))
                    {
                        <!-- Menú para Administrador -->
                        <li class="nav-item">@Html.ActionLink("Empleados", "ListarEmpleados", "Empleado", new { area = "" }, new { @class = "nav-link", style = "color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Variables Financieras", "Index", "VariablesFinancieras", new { area = "" }, new { @class = "nav-link", style = "color: white;" })</li>
                    }

                    @if (hasRole("Contador"))
                    {
                        <!-- Menú para Contador -->
                        <li class="nav-item">@Html.ActionLink("Tablero de Control", "Index", "TableroDeControl", new { area = "" }, new { @class = "nav-link", style = "color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Hoja Resumen", "listarHojaResumen", "HojaResumen", new { area = "" }, new { @class = "nav-link", style = "color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Variables Financieras", "Index", "VariablesFinancieras", new { area = "" }, new { @class = "nav-link", style = "color: white;" })</li>
                    }

                    @if (hasRole("Empleado"))
                    {
                        <!-- Menú para Empleado -->
                        <li class="nav-item">@Html.ActionLink("Perfil", "Detalles", "DatosPersonales", null, new { @class = "nav-link", style = "color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Reporte de Pagos", "HistorialPagos", "ReportesPago", null, new { @class = "nav-link", style = "color: white;" })</li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <!-- Si el usuario está autenticado, mostrar roles y botón de Salir -->
                        <li class="nav-item navbar-user" style="margin-right: 20px; color: white;">
                            <i class="glyphicon glyphicon-user"></i>
                            @if (hasMultipleRoles)
                            {
                                <span title="Roles: @string.Join(", ", userRoles)">@primaryRole +@(userRoles.Length - 1)</span>
                            }
                            else
                            {
                                <span>@primaryRole</span>
                            }
                        </li>
                        <li class="nav-item">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link" style="padding: 0; color: white; text-decoration: none;">
                                    <i class="glyphicon glyphicon-log-out"></i> Salir
                                </button>
                            }
                        </li>
                    }
                    else
                    {
                        <!-- Si NO está autenticado, mostrar enlaces a Login y Register -->
                        <li class="nav-item">
                            @Html.ActionLink("Registrar", "Register", "Account", new { area = "" }, new { @class = "nav-link", style = "color: white;" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Iniciar sesión", "Login", "Account", new { area = "" }, new { @class = "nav-link", style = "color: white;" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <!-- Token anti-falsificación para AJAX -->
        @Html.AntiForgeryToken()
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Suplidora Royal Ltda. Todos los derechos reservados.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Modal de Confirmación de Contraseña de Administrador -->
    @Html.Partial("_AdminPasswordModal")

    <!-- Sistema de roles unificado - Sin cambio de roles -->
    <script>
        // El sistema ahora muestra todos los roles del usuario sin posibilidad de cambio
        // Los permisos se verifican automáticamente en cada acción
        console.log('Sistema de roles unificado cargado - Sin cambio de roles');
    </script>
</body>
</html>
