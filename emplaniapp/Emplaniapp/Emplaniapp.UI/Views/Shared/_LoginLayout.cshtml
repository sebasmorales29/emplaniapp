<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Emplaniapp</title>

    @Scripts.Render("~/bundles/modernizr")

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="~/Content/CSS/estilosApp.css" rel="stylesheet" />

    <!-- Plantilla -->
    <link href="~/Content/assets/css/backend.css" rel="stylesheet" />
</head>


<body class="">
    <div class="wrapper"" >

        <section class="login-content bg-primary-light"> <!--bg-gradient-->
            <div class="container h-100">
                <div class="row justify-content-center align-items-center height-self-center">
                    <div class="col-md-5 col-sm-12 col-12 align-self-center">
                        @RenderBody()


                        <footer class="text-center mt-5 small">
                            Emplaniapp @DateTime.Now.Year - Todos los derechos reservados
                        </footer>
                    </div>
                </div>
            </div>
        </section>


      

    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Scripts de plantilla -->
    <script src="~/Content/assets/js/backend-bundle.min.js"></script>  <!-- Backend Bundle JavaScript -->
    <script src="~/Content/assets/js/app.js"></script> <!-- app JavaScript -->

</body>
</html> 