@model Emplaniapp.Abstracciones.ModelosParaUI.TipoRemuneracionDto

@{
    ViewBag.Title = "Editar Remuneración";
}


<div class="row">
    <div class="col-md-12" style="margin-bottom: 20px;">
        <h2 class="mb-2">Editar el Tipo de Remuneración</h2>
        <!-- Botón de breadcrumb -->
        <a class="btn btn-light text-primary" href="@Url.Action("Index","VariablesFinancieras")">
            <i class="bi bi-arrow-left-short"></i>
            Volver Variables Financieras
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <div class="card card-block card-stretch card-height shadow-lg">

            @using (Html.BeginForm("EditRemu", "VariablesFinancieras", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "advertencia" })
                @Html.HiddenFor(model => model.Id)

                <div class="card-body">
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.nombreTipoRemuneracion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.nombreTipoRemuneracion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombreTipoRemuneracion, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.porcentajeRemuneracion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.porcentajeRemuneracion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.porcentajeRemuneracion, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.idEstado, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.idEstado, new SelectList(new[]
                            {
                                new { Value = "1", Text = "Activo" },
                                new { Value = "2", Text = "Inactivo" }
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idEstado, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group text-center justify-content-center">
                            <a class="btn btn-outline-secondary m-2" href="@Url.Action("Index","VariablesFinancieras")">
                                Cancelar
                            </a>
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary m-2" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>