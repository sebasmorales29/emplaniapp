@model Emplaniapp.Abstracciones.ModelosParaUI.TipoRemuneracionDto

@{
    ViewBag.Title = "Editar Remuneración";
}

<h2>Editar Remuneración</h2>

@using (Html.BeginForm("EditRemu", "VariablesFinancieras", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.nombreTipoRemuneracion, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreTipoRemuneracion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreTipoRemuneracion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.porcentajeRemuneracion, "Porcentaje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.porcentajeRemuneracion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.porcentajeRemuneracion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idEstado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idEstado, new SelectList(new[]
                {
                    new { Value = "1", Text = "Activo" },
                    new { Value = "2", Text = "Inactivo" }
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEstado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Guardar Cambios" class="btn btn-outline-primary" />
                <br />
                <br />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a Variables Financieras", "Index")
</div>
