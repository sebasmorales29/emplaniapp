@model Emplaniapp.Abstracciones.ModelosParaUI.TipoRetencionDto

@{
    ViewBag.Title = "Editar Retención";
}

<div class="row">
    <div class="col-md-12" style="margin-bottom: 20px;">
        <h2 class="mb-2">Editar el Tipo de Retención</h2>
        <!-- Botón de breadcrumb -->
        <a class="btn btn-light text-primary" href="@Url.Action("Index","VariablesFinancieras")">
            <i class="bi bi-arrow-left-short"></i>
            Volver Variables Financieras
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <div class="card card-block card-stretch card-height shadow-lg">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "advertencia" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.nombreTipoRetencion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.nombreTipoRetencion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombreTipoRetencion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.porcentajeRetencion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.porcentajeRetencion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.porcentajeRetencion, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.idEstado, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.idEstado, new SelectList(new[] {
                                    new { Value = "1", Text = "Activo" },
                                    new { Value = "2", Text = "Inactivo" }
                                }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idEstado, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group text-center justify-content-center">
                            <a class="btn btn-outline-secondary m-2" href="@Url.Action("Index","VariablesFinancieras")">
                                Cancelar
                            </a>
                             <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var inp = document.getElementById('porcentajeRetencion') || document.querySelector('[name="porcentajeRetencion"]');
        if (!inp) return;
        inp.addEventListener('blur', function () {
            if (inp.value.indexOf('.') !== -1) {
                inp.value = inp.value.replace(/\./g, ',');
            }
        });
        inp.addEventListener('input', function () {
            if (inp.value.indexOf('.') !== -1) {
                inp.value = inp.value.replace(/\./g, ',');
            }
        });
    });
</script>