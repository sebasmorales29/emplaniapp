<h1>@ViewBag.Title</h1>
<br />
<br />

<div class="row">

    <!-- Remuneraciones Card -->
    <div class="col-md-6">
        <div class="card">
            <!-- Cabecera -->
            <div class="card-header card-header-flex row justify-content-between m-0">
                <h3>Tipos de Remuneraciones</h3>
                <a href="@Url.Action("CreateRemu", "VariablesFinancieras")"
                   class="btn btn-primary">
                    <i class="bi bi-plus"></i>Agregar
                </a>
            </div>
            <!-- Cuerpo -->
            <div class="card-body">
                <table id="TablaTipoRemuneraciones" class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Tipo")</th>
                            <th>@Html.DisplayName("Valor %")</th>
                            <th>@Html.DisplayName("Estado")</th>
                            <th>@Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombreTipoRemuneracion)</td>
                                <td>@Html.DisplayFor(modelItem => item.porcentajeRemuneracion)</td>
                                <td>
                                    @if (item.idEstado == 1)
                                    {
                                        <span class="badge bg-success-light">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-light">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("EditRemu", "VariablesFinancieras", new { id = item.Id })"
                                       class="btn btn-light text-primary">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteRemu", "VariablesFinancieras", new { id = item.Id })"
                                       class="btn btn-light" style="color: #de6f6f;">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Retenciones Card -->
    <div class="col-md-6">
        <div class="card">

            <!-- Cabecera -->
            <div class="card-header card-header-flex row justify-content-between m-0">
                <h3>Tipos de Retenciones</h3>
                <a href="@Url.Action("CreateReten", "VariablesFinancieras")"
                   class="btn btn-primary">
                    <i class="bi bi-plus"></i>Agregar
                </a>
            </div>
        
            <!-- Cuerpo -->
            <div class="card-body">
                <table id="TablaTipoRetenciones" class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Tipo")</th>
                            <th>@Html.DisplayName("Valor %")</th>
                            <th>@Html.DisplayName("Estado")</th>
                            <th>@Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item2)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombreTipoRetencion)</td>
                                <td>@Html.DisplayFor(modelItem => item.porcentajeRetencion)</td>
                                <td>
                                    @if (item.idEstado == 1)
                                    {
                                        <span class="badge bg-success-light">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-light">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("EditReten", "VariablesFinancieras", new { id = item.Id })"
                                       class="btn btn-light text-primary">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteReten", "VariablesFinancieras", new { id = item.Id })"
                                       class="btn btn-light" style="color: #de6f6f;">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
