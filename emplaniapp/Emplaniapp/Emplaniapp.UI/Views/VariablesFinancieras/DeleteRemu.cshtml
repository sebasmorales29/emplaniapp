@model Emplaniapp.Abstracciones.ModelosParaUI.TipoRemuneracionDto

@{
    ViewBag.Title = "Eliminar Remuneración";
}

<h2>Eliminar Remuneración</h2>
<h3>¿Desea eliminar la siguiente información?</h3>
<hr />

<div class="form-horizontal">
    <div class="form-group" style="margin-bottom: 20px;">
        <strong class="control-label col-md-2">@Html.DisplayName("Nombre")</strong>
        <div class="col-md-10" style="padding-top: 7px;">
            @Html.DisplayFor(model => model.nombreTipoRemuneracion)
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <strong class="control-label col-md-2">@Html.DisplayName("Porcentaje %")</strong>
        <div class="col-md-10" style="padding-top: 7px;">
            @Html.DisplayFor(model => model.porcentajeRemuneracion)
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <strong class="control-label col-md-2">@Html.DisplayName("Estado")</strong>
        <div class="col-md-10" style="padding-top: 7px;">
            @if (Model.idEstado == 1)
            {
                <span>Activo</span>
            }
            else
            {
                <span>Inactivo</span>
            }
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color col-md-offset-2">
        <br />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <br />
        <br />
    </div>
}
<br />
<div>
    @Html.ActionLink("Volver a Variables Financieras", "Index")
</div>
