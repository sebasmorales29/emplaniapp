@model Emplaniapp.Abstracciones.ModelosParaUI.TipoRemuneracionDto

@{
    ViewBag.Title = "Agregar Remuneración";
}


<div class="row">
    <div class="col-md-12" style="margin-bottom: 20px;">
        <h2 class="mb-2">Agregar un Tipo de Remuneración</h2>
        <!-- Botón de breadcrumb -->
        <a class="btn btn-light text-primary" href="@Url.Action("Index","VariablesFinancieras")">
            <i class="bi bi-arrow-left-short"></i>
            Volver Variables Financieras
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-block card-stretch card-height shadow-lg">

            @using (Html.BeginForm("CreateRemu", "VariablesFinancieras", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "advertencia" })

                <div class="card-body">
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.nombreTipoRemuneracion)
                            @Html.EditorFor(model => model.nombreTipoRemuneracion, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.nombreTipoRemuneracion, "", new { @class = "advertencia" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.porcentajeRemuneracion)
                            @Html.EditorFor(model => model.porcentajeRemuneracion, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.porcentajeRemuneracion, "", new { @class = "advertencia" })
                        </div>
                        <br />

                        <div class="form-group text-center justify-content-center">
                            <a class="btn btn-outline-secondary m-2" href="@Url.Action("Index","VariablesFinancieras")">
                                Cancelar
                            </a>
                            <input type="submit" class="btn btn-primary m-2" id="submitRemu" value="Agregar"/>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>

    document.addEventListener('DOMContentLoaded', function () {

        var inp = document.getElementById('porcentajeRemuneracion') || document.querySelector('[name="porcentajeRemuneracion"]');

        if (!inp) return;

        inp.addEventListener('blur', function () {
            if (inp.value.indexOf('.') !== -1) {
                inp.value = inp.value.replace(/\./g, ',');
            }
        });

        inp.addEventListener('input', function () {
            if (inp.value.indexOf('.') !== -1) {
                inp.value = inp.value.replace(/\./g, ',');
            }
        });
    });
</script>