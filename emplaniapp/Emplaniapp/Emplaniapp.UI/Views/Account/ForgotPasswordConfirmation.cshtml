@{
    ViewBag.Title = "Correo enviado";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    // Lee horas desde Web.config (fallback 24)
    var tokenHours = System.Configuration.ConfigurationManager.AppSettings["ResetTokenLifespanHours"];
    if (string.IsNullOrWhiteSpace(tokenHours)) { tokenHours = "24"; }
}

<div class="sign-user_card bg-white text-center p-4">

    <!-- Header de la empresa -->
    <div class="mb-3">
        <img src="~/Content/Images/Emplaniapp_Logo1.png" alt="Logo de Emplaniapp" style="max-height:80px;">
    </div>

    <h1 class="mb-2">
        <i class="bi bi-check-circle-fill" style="color:green; padding:20px;" aria-hidden="true"></i>
    </h1>
    <h3 class="mb-2">¡Correo enviado!</h3>

    <p class="text-secondary">
        Recibirá un enlace para restablecer su contraseña. El enlace enviado caduca en <strong>@tokenHours</strong> horas.
        <br />Recuerde revisar también la carpeta de spam o correo no deseado.
    </p>

    <div class="mt-4" style="text-size-adjust:auto;">
        <a href="@Url.Action("Login","Account")" class="btn btn-primary mb-2">Volver al inicio de sesión</a><br />
        <span class="text-secondary">
            ¿No recibió el enlace o ya caducó?
            <a href="@Url.Action("ForgotPassword","Account")" class="btn-outline">Solicitar uno nuevo</a>.
        </span>
    </div>

</div>
