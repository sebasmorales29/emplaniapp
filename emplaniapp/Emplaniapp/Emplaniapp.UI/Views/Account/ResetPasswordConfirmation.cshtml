@{
    ViewBag.Title = "Contraseña actualizada";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        overflow: hidden;
        position: fixed;
        width: 100%;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100vw;
        padding: 20px;
        position: fixed;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 1;
    }

    .login-card {
        background: rgba(255,255,255,.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 50px 40px;
        width: 100%;
        max-width: 480px;
        box-shadow: 0 25px 50px rgba(0,0,0,.15), 0 0 0 1px rgba(255,255,255,.2);
        position: relative;
        z-index: 100;
        transition: transform .3s ease;
        margin: 0 auto;
    }

        .login-card:hover {
            transform: translateY(-5px);
        }

    .company-header {
        text-align: center;
        margin-bottom: 28px;
    }

    .company-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 16px;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(74,135,199,.3);
    }

        .company-logo img {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            object-fit: cover;
        }

    .company-name {
        font-size: 26px;
        font-weight: 700;
        background: linear-gradient(135deg, #4a87c7, #5b9bd5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
    }

    .icon-success {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        margin: 10px auto 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at 30% 30%, #4ade80, #16a34a);
        box-shadow: 0 12px 30px rgba(22,163,74,.35);
        color: white;
        font-size: 40px;
        font-weight: 800;
    }

    .message-title {
        text-align: center;
        font-size: 22px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 10px;
    }

    .message-text {
        text-align: center;
        color: #64748b;
        line-height: 1.6;
        margin-bottom: 22px;
    }

    .actions {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
    }

    .btn-primary {
        display: inline-block;
        text-align: center;
        padding: 14px 16px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all .2s ease;
        background: linear-gradient(135deg, #4a87c7, #5b9bd5);
        color: #fff;
        border: none;
        box-shadow: 0 10px 25px rgba(74,135,199,.35);
    }

        .btn-primary:hover {
            transform: translateY(-1px);
        }

    .additional-links {
        text-align: center;
        margin-top: 20px;
        color: #64748b;
        font-size: 14px;
    }

        .additional-links a {
            color: #4a87c7;
            text-decoration: none;
            font-weight: 600;
        }

    @@media (max-width: 480px) {
        .login-card {
            padding: 32px 24px;
            max-height: 90vh;
            overflow-y: auto;
        }

        body, html {
            overflow: hidden;
        }

        .login-container {
            height: 100vh;
            padding: 10px;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="company-header">
            <div class="company-logo">
                <img src="https://medismart.net/wp-content/uploads/2023/06/suplidora-royal.jpg" alt="Logo">
            </div>
            <h1 class="company-name">EmplaniApp</h1>
        </div>

        <div class="icon-success">✓</div>
        <div class="message-title">¡Contraseña actualizada!</div>
        <div class="message-text">
            Tu contraseña fue restablecida correctamente. Ya puedes iniciar sesión con tu nueva clave.
        </div>

        <div class="actions">
            <a href="@Url.Action("Login","Account")" class="btn-primary">Iniciar sesión</a>
        </div>

        <div class="additional-links">
            ¿Olvidaste tu usuario? <a href="#" onclick="return false;">Contacta al administrador</a>
        </div>
    </div>
</div>