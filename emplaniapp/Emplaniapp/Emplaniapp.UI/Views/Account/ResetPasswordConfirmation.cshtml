@{
    ViewBag.Title = "Contraseña actualizada";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="sign-user_card bg-white text-center p-4">
    <!-- Header de la empresa -->
    <div class="mb-3">
        <img src="~/Content/Images/Emplaniapp_Logo1.png" alt="Logo de Emplaniapp" style="max-height:80px;">
    </div>

    <h1 class="mb-2">
        <i class="bi bi-check-circle-fill" style="color:green; padding:20px;" aria-hidden="true"></i>
    </h1>
    <h3 class="mb-2">¡Contraseña actualizada!</h3>
    <p class="text-secondary">
        Tu contraseña fue restablecida correctamente. Ya puedes iniciar sesión con tu nueva clave.
    </p>

    <a href="@Url.Action("Login","Account")" class="btn btn-primary mb-2">Iniciar sesión</a>
</div>
