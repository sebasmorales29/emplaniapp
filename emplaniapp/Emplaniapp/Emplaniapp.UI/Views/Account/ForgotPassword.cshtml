@model Emplaniapp.UI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Recuperación de contraseña";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    /* Pantalla completa sin scroll */
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        background: #ffffff;
    }

    /* Flex 75/25 */
    .login-flex {
        display: flex;
        height: 80vh;
        overflow: hidden;
    }

    .login-left {
        flex: 3;
        background: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-right {
        flex: 1;
        overflow: hidden;
    }



    /* Card blanco que ocupa todo el 75% */

    .inner-card {
        background: #ffffff;
        padding: 2rem;
        width: 100%;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }



    /* Logo y títulos */
    .login-logo {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-logo .glyphicon {
            font-size: 48px;
            color: #4a87c7;
        }

        .login-logo h1 {
            margin: .5rem 0 0;
            font-size: 26px;
            font-weight: 600;
            color: #4a87c7;
        }

    .login-form-title {
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 1.5rem;
        color: #333;
    }

    /* Formulario */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-control {
        width: 500%;
        padding: .75rem 1rem;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        color: #333;
    }

        .form-control::placeholder {
            color: #999;
        }

    .btn-primary {
        width: 100%;
        padding: .75rem;
        font-size: 15px;
        font-weight: 600;
        border-radius: 4px;
        background-color: #4a87c7;
        border-color: #4a87c7;
    }

    /* Enlace debajo */
    .forgot-password-link {
        margin-top: 1rem;
        text-align: center;
    }

        .forgot-password-link a {
            color: #4a87c7;
            font-size: 13px;
        }
</style>

<div class="login-flex">
    <!-- Izquierda ~75% -->
    <div class="login-left">
        <div class="inner-card">
            <div class="login-logo">
                <span class="glyphicon glyphicon-folder-close"></span>
                <h1>Emplaniapp</h1>
            </div>

            <h2 class="login-form-title">Recuperación de contraseña</h2>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "Correo Electrónico")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "usuario@correo.com" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Solicitar cambio" class="btn btn-primary" />
                </div>

                <div class="forgot-password-link">
                    ¿Ya tiene cuenta? @Html.ActionLink("Iniciar Sesión", "Login", "Account")
                </div>
            }
        </div>
    </div>

    <!-- Derecha ~25% -->
    <div class="login-right">
        <img src="~/Content/images/login-bg.jpg" alt="">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

