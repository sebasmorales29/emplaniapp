@model Emplaniapp.UI.Models.LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        overflow: hidden;
        position: fixed;
        width: 100%;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100vw;
        padding: 20px;
        position: fixed;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 1;
    }



    .login-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 50px 40px;
        width: 100%;
        max-width: 450px;
        box-shadow: 
            0 25px 50px rgba(0, 0, 0, 0.15),
            0 0 0 1px rgba(255, 255, 255, 0.2);
        position: relative;
        z-index: 100;
        transition: transform 0.3s ease;
        margin: 0 auto;
    }

    .login-card:hover {
        transform: translateY(-5px);
    }

    .company-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .company-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(74, 135, 199, 0.3);
    }

    .company-logo img {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        object-fit: cover;
    }

    .company-name {
        font-size: 28px;
        font-weight: 700;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .login-subtitle {
        color: #64748b;
        font-size: 16px;
        font-weight: 400;
        line-height: 1.5;
    }

    .form-container {
        margin-top: 40px;
        width: 100%;
    }

    .input-group {
        margin-bottom: 24px;
        position: relative;
        width: 100%;
    }

    .input-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
        transition: color 0.3s ease;
        text-align: left;
    }

    .input-wrapper {
        position: relative;
        width: 100%;
    }

    .form-input {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 16px;
        background: white;
        transition: all 0.3s ease;
        font-weight: 400;
    }

    .form-input:focus {
        outline: none;
        border-color: #4a87c7;
        box-shadow: 0 0 0 3px rgba(74, 135, 199, 0.1);
    }

    .form-input::placeholder {
        color: #9ca3af;
        font-weight: 400;
    }

    .form-input {
        height: 54px;
        box-sizing: border-box;
    }

    .input-wrapper .form-input {
        padding-right: 50px;
    }

    .password-toggle {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #9ca3af;
        font-size: 18px;
        transition: color 0.3s ease;
        z-index: 3;
        width: 20px;
        height: 20px;
        background: none;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .password-toggle:hover {
        color: #4a87c7;
    }

    /* Ícono de ojo usando CSS */
    .eye-icon {
        width: 20px;
        height: 12px;
        border: 2px solid currentColor;
        border-radius: 20px;
        position: relative;
        display: inline-block;
    }

    .eye-icon::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 8px;
        height: 8px;
        background: currentColor;
        border-radius: 50%;
    }

    .eye-icon.closed {
        background: transparent;
    }

    .eye-icon.closed::after {
        content: '';
        position: absolute;
        top: 50%;
        left: -2px;
        right: -2px;
        height: 2px;
        background: currentColor;
        transform: translateY(-50%) rotate(45deg);
    }

    .forgot-password {
        text-align: right;
        margin-bottom: 32px;
    }

    .forgot-password a {
        color: #4a87c7;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .forgot-password a:hover {
        color: #5b9bd5;
        text-decoration: underline;
    }

    .login-button {
        width: 100%;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        color: white;
        border: none;
        padding: 18px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        overflow: hidden;
    }

    .login-button:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .login-button:hover:before {
        left: 100%;
    }

    .login-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(74, 135, 199, 0.4);
    }

    .login-button:active {
        transform: translateY(0);
    }

    .validation-summary {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #dc2626;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-size: 14px;
        border-left: 4px solid #ef4444;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.15);
    }

    .field-validation-error {
        color: #ef4444;
        font-size: 12px;
        margin-top: 6px;
        font-weight: 500;
    }

    .additional-links {
        text-align: center;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid #e5e7eb;
    }

    .additional-links p {
        color: #64748b;
        font-size: 14px;
    }

    .additional-links a {
        color: #4a87c7;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .additional-links a:hover {
        color: #5b9bd5;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .login-card {
            margin: 20px;
            padding: 40px 30px;
            border-radius: 20px;
        }
        
        .company-name {
            font-size: 24px;
        }
    }

    @@media (max-width: 480px) {
        .login-card {
            padding: 30px 25px;
            max-height: 90vh;
            overflow-y: auto;
        }
        
        body, html {
            overflow: hidden;
        }
        
        .login-container {
            height: 100vh;
            padding: 10px;
        }
    }

    /* Loading Animation */
    .btn-loading {
        position: relative;
        color: transparent !important;
    }

    .btn-loading:after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        top: 50%;
        left: 50%;
        margin-left: -10px;
        margin-top: -10px;
        border: 2px solid #ffffff;
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <!-- Header de la empresa -->
        <div class="company-header">
            <div class="company-logo">
                <img src="https://medismart.net/wp-content/uploads/2023/06/suplidora-royal.jpg" alt="Logo">
            </div>
            <h1 class="company-name">EmplaniApp</h1>
            <p class="login-subtitle">Inicia sesión para acceder a tu panel de administración</p>
        </div>

        <!-- Formulario de login -->
        <div class="form-container">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary">
                        <strong>Por favor corrige los siguientes errores:</strong>
                        @Html.ValidationSummary(true, "", new { @class = "" })
                    </div>
                }

                <div class="input-group">
                    <label class="input-label" for="UserName">Usuario</label>
                    <div class="input-wrapper">
                        @Html.TextBoxFor(m => m.UserName, new { 
                            @class = "form-input", 
                            @placeholder = "Ingresa tu nombre de usuario",
                            @autocomplete = "username"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "field-validation-error" })
                </div>

                <div class="input-group">
                    <label class="input-label" for="Password">Contraseña</label>
                    <div class="input-wrapper">
                        @Html.PasswordFor(m => m.Password, new { 
                            @class = "form-input", 
                            @placeholder = "Ingresa tu contraseña",
                            @autocomplete = "current-password"
                        })
                        <button type="button" class="password-toggle" id="togglePassword">
                            <span class="eye-icon" id="eyeIcon"></span>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>

                <div class="forgot-password">
                    @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", "Account")
                </div>

                <button type="submit" class="login-button" id="loginBtn">
                    Iniciar Sesión
                </button>
            }
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Toggle de contraseña
            $('#togglePassword').click(function () {
                var passwordField = $('#Password');
                var eyeIcon = $('#eyeIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    eyeIcon.addClass('closed');
                } else {
                    passwordField.attr('type', 'password');
                    eyeIcon.removeClass('closed');
                }
            });

            // Efecto de loading en el botón
            $('#loginForm').submit(function() {
                var btn = $('#loginBtn');
                btn.addClass('btn-loading');
                btn.prop('disabled', true);
                
                // Si hay errores de validación, remover el loading
                setTimeout(function() {
                    if ($('.field-validation-error:visible').length > 0 || $('.validation-summary:visible').length > 0) {
                        btn.removeClass('btn-loading');
                        btn.prop('disabled', false);
                    }
                }, 100);
            });

            // Efectos de focus en los inputs
            $('.form-input').on('focus', function() {
                $(this).closest('.input-group').find('.input-label').css('color', '#4a87c7');
            });

            $('.form-input').on('blur', function() {
                $(this).closest('.input-group').find('.input-label').css('color', '#374151');
            });

            // Animación de entrada
            setTimeout(function() {
                $('.login-card').css({
                    'animation': 'slideInUp 0.6s ease-out',
                    'opacity': '1'
                });
            }, 100);
        });

        // Animación CSS adicional
        $('<style>').text(`
            @@keyframes slideInUp {
                from {
                    transform: translateY(30px);
                    opacity: 0;
                }
                to {
                    transform: translateY(0);
                    opacity: 1;
                }
            }
            .login-card {
                opacity: 0;
            }
        `).appendTo('head');
    </script>
}
