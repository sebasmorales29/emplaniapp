<!-- JavaScript -->
<script>
$(document).ready(function() {
    var empleadoId = @Model.idEmpleado;
    var rolesOriginales = {}; // Para rastrear el estado original
    var cambiosPendientes = false;
    
    // ‚ú® CORRECCI√ìN: Establecer el controlador correcto para el modal
    window.currentController = 'DatosPersonales';

    // Cargar roles al inicializar
    cargarRoles();

    function cargarRoles() {
        $('#loading').show();
        $('#roles-list').hide();
        ocultarMensaje();

        $.ajax({
            url: '@Url.Action("ObtenerRolesEmpleado", "DatosPersonales")',
            type: 'GET',
            data: { idEmpleado: empleadoId },
            success: function(response) {
                $('#loading').hide();

                if (response.success) {
                    actualizarCheckboxes(response.roles);
                    $('#roles-list').show();
                } else {
                    mostrarMensaje('warning', response.message);
                    $('#roles-list').show();
                }
            },
            error: function() {
                $('#loading').hide();
                mostrarMensaje('danger', 'Error al cargar la informaci√≥n de roles.');
                $('#roles-list').show();
            }
        });
    }

    function actualizarCheckboxes(roles) {
        // Limpiar estado anterior
        rolesOriginales = {};
        $('input[type="checkbox"]').prop('checked', false);

        // Marcar los roles asignados y guardar estado original
        roles.forEach(function(rol) {
            rolesOriginales[rol.nombre] = rol.asignado;
            $('#rol-' + rol.nombre).prop('checked', rol.asignado);
        });

        // Resetear estado de cambios
        cambiosPendientes = false;
        actualizarBotones();

        // Agregar listeners a los checkboxes
        $('input[type="checkbox"]').off('change').on('change', function() {
            verificarCambios();
        });
    }

    function verificarCambios() {
        console.log('üîç DIAGN√ìSTICO: === VERIFICANDO CAMBIOS ===');
        console.log('üîç DIAGN√ìSTICO: rolesOriginales:', rolesOriginales);
        
        cambiosPendientes = false;
        var cambiosDetectados = [];

        $('input[type="checkbox"]').each(function() {
            var rol = $(this).val();
            var estadoActual = $(this).is(':checked');
            var estadoOriginal = rolesOriginales[rol] || false;

            console.log(`üîç DIAGN√ìSTICO: Rol ${rol} - Estado actual: ${estadoActual}, Estado original: ${estadoOriginal}`);

            if (estadoActual !== estadoOriginal) {
                cambiosPendientes = true;
                cambiosDetectados.push({
                    rol: rol,
                    actual: estadoActual,
                    original: estadoOriginal
                });
                console.log(`üîç DIAGN√ìSTICO: ‚úÖ CAMBIO DETECTADO - Rol: ${rol}, De: ${estadoOriginal} A: ${estadoActual}`);
                return false; // break
            }
        });

        console.log('üîç DIAGN√ìSTICO: cambiosPendientes:', cambiosPendientes);
        console.log('üîç DIAGN√ìSTICO: cambiosDetectados:', cambiosDetectados);
        actualizarBotones();
    }

    function actualizarBotones() {
        if (cambiosPendientes) {
            $('#btn-confirmar').prop('disabled', false);
        } else {
            $('#btn-confirmar').prop('disabled', true);
        }
    }

    function mostrarMensaje(tipo, mensaje) {
        var alertClass = 'alert-' + tipo;
        var icono = 'fa-info-circle';

        // Seleccionar icono seg√∫n el tipo de mensaje
        switch(tipo) {
            case 'success':
                icono = 'fa-check-circle';
                break;
            case 'danger':
                icono = 'fa-exclamation-triangle';
                break;
            case 'warning':
                icono = 'fa-exclamation-circle';
                break;
            default:
                icono = 'fa-info-circle';
        }

        $('#mensaje-estado')
            .removeClass('alert-success alert-danger alert-warning alert-info')
            .addClass(alertClass)
            .html('<i class="fa ' + icono + '"></i> ' + mensaje)
            .show();

        // Auto-ocultar despu√©s de 7 segundos para mensajes de √©xito (m√°s tiempo para leer)
        var tiempo = tipo === 'success' ? 7000 : 5000;
        setTimeout(function() {
            $('#mensaje-estado').fadeOut();
        }, tiempo);
    }

    function ocultarMensaje() {
        $('#mensaje-estado').hide();
    }

    // Bot√≥n Confirmar Cambios
    $('#btn-confirmar').click(function() {
        console.log('üîç DIAGN√ìSTICO: === BOT√ìN CONFIRMAR CAMBIOS PRESIONADO ===');
        console.log('üîç DIAGN√ìSTICO: cambiosPendientes:', cambiosPendientes);
        
        if (!cambiosPendientes) {
            console.log('üîç DIAGN√ìSTICO: ‚ùå No hay cambios pendientes, saliendo...');
            return;
        }

        console.log('üîç DIAGN√ìSTICO: ‚úÖ Hay cambios pendientes, procediendo...');
        console.log('üîç DIAGN√ìSTICO: Llamando a aplicarCambios()...');
        aplicarCambios();
    });

    // Bot√≥n Cancelar
    $('#btn-cancelar').click(function() {
        if (cambiosPendientes) {
            if (!confirm('¬øEst√° seguro que desea cancelar los cambios realizados?')) {
                return;
            }
        }

        // Revertir checkboxes al estado original
        Object.keys(rolesOriginales).forEach(function(rol) {
            $('#rol-' + rol).prop('checked', rolesOriginales[rol]);
        });

        cambiosPendientes = false;
        actualizarBotones();
        ocultarMensaje();
    });

    // ‚ú® CORRECCI√ìN: Eliminar manejador duplicado - el modal ya tiene su propio manejador
    // Este manejador estaba causando conflictos con el del modal

    function aplicarCambios() {
        console.log('üîç DIAGN√ìSTICO: aplicarCambios iniciado');
        var cambios = [];

        $('input[type="checkbox"]').each(function() {
            var rol = $(this).val();
            var estadoActual = $(this).is(':checked');
            var estadoOriginal = rolesOriginales[rol] || false;

            console.log(`üîç DIAGN√ìSTICO: Rol ${rol} - Estado actual: ${estadoActual}, Estado original: ${estadoOriginal}`);

            if (estadoActual !== estadoOriginal) {
                cambios.push({
                    rol: rol,
                    accion: estadoActual ? 'asignar' : 'remover'
                });
                console.log(`üîç DIAGN√ìSTICO: Cambio detectado - Rol: ${rol}, Acci√≥n: ${estadoActual ? 'asignar' : 'remover'}`);
            }
        });

        console.log('üîç DIAGN√ìSTICO: Cambios detectados:', cambios);

        if (cambios.length === 0) {
            console.log('üîç DIAGN√ìSTICO: No hay cambios para aplicar');
            mostrarMensaje('info', 'No hay cambios para aplicar.');
            return;
        }

        // ‚ú® NUEVO: Verificar si es administrador y mostrar modal de contrase√±a
        var isAdmin = @(User != null && User.IsInRole("Administrador") ? "true" : "false");
        console.log('üîç DIAGN√ìSTICO: Usuario es admin:', isAdmin);
        
        if (isAdmin) {
            console.log('üîç DIAGN√ìSTICO: Usuario es admin, mostrando modal para cambios de roles...');
            console.log('üîç DIAGN√ìSTICO: Guardando cambios pendientes en window.pendingRoleChanges:', cambios);
            console.log('üîç DIAGN√ìSTICO: === GUARDANDO CAMBIOS EN WINDOW.PENDINGROLECHANGES ===');
            
            // Guardar los cambios para procesarlos despu√©s de validar la contrase√±a
            window.pendingRoleChanges = cambios;
            
            // ‚ú® VERIFICACI√ìN EXTRA: Confirmar que se guard√≥ correctamente
            console.log('üîç DIAGN√ìSTICO: window.pendingRoleChanges despu√©s de guardar:', window.pendingRoleChanges);
            console.log('üîç DIAGN√ìSTICO: window.pendingRoleChanges.length despu√©s de guardar:', window.pendingRoleChanges ? window.pendingRoleChanges.length : 'N/A');
            console.log('üîç DIAGN√ìSTICO: typeof window.pendingRoleChanges:', typeof window.pendingRoleChanges);
            console.log('üîç DIAGN√ìSTICO: Array.isArray(window.pendingRoleChanges):', Array.isArray(window.pendingRoleChanges));
            
            // Mostrar modal de contrase√±a de administrador
            if (window.AdminPasswordModal && window.AdminPasswordModal.show) {
                console.log('üîç DIAGN√ìSTICO: Usando window.AdminPasswordModal.show()');
                console.log('üîç DIAGN√ìSTICO: === MOSTRANDO MODAL DE ADMIN ===');
                window.AdminPasswordModal.show();
            } else {
                console.log('üîç DIAGN√ìSTICO: Usando m√©todo directo para mostrar modal');
                $('#adminPasswordInput').val('');
                $('#adminPasswordError').hide();
                $('#adminPasswordModal').modal('show');
            }
        } else {
            console.log('üîç DIAGN√ìSTICO: Usuario no es admin, procesando cambios directamente...');
            procesarCambiosDirectamente(cambios);
        }
    }

    function procesarCambiosDirectamente(cambios) {
        console.log('üîç DIAGN√ìSTICO: procesarCambiosDirectamente llamado con cambios:', cambios);
        console.log('üîç DIAGN√ìSTICO: Funci√≥n procesarCambiosDirectamente ejecut√°ndose...');
        
        // ‚ú® CORRECCI√ìN: Limpiar cambios pendientes al inicio
        console.log('üîç DIAGN√ìSTICO: Limpiando window.pendingRoleChanges al inicio...');
        window.pendingRoleChanges = null;
        
        // Validar que hay cambios para procesar
        if (!cambios || cambios.length === 0) {
            console.error('‚ùå ERROR: No hay cambios para procesar');
            console.log('üîç DIAGN√ìSTICO: cambios recibidos:', cambios);
            return;
        }
        
        // Mostrar mensaje de progreso
        var mensajeProgreso = cambios.length === 1
            ? 'Aplicando cambio de rol...'
            : 'Aplicando ' + cambios.length + ' cambios de roles...';
        console.log('üîç DIAGN√ìSTICO: Mostrando mensaje:', mensajeProgreso);
        mostrarMensaje('info', mensajeProgreso);

        // Deshabilitar controles durante el proceso
        $('input[type="checkbox"], #btn-confirmar, #btn-cancelar').prop('disabled', true);
        console.log('üîç DIAGN√ìSTICO: Controles deshabilitados, iniciando procesarCambios...');

        procesarCambios(cambios, 0);
    }

    // ‚ú® NUEVO: Hacer la funci√≥n disponible globalmente
    window.procesarCambiosDirectamente = procesarCambiosDirectamente;

    function procesarCambios(cambios, indice) {
        console.log('üîç DIAGN√ìSTICO: procesarCambios llamado con indice:', indice, 'de', cambios.length);
        
        if (indice >= cambios.length) {
            console.log('üîç DIAGN√ìSTICO: Todos los cambios completados');
            // Todos los cambios completados
            $('input[type="checkbox"], #btn-cancelar').prop('disabled', false);

            // ‚ú® NUEVO: Mostrar modal de √©xito en lugar de mensaje
            var mensaje = cambios.length === 1
                ? 'El cambio de rol ha sido aplicado exitosamente'
                : 'Se aplicaron correctamente ' + cambios.length + ' cambios de roles';

            console.log('üîç DIAGN√ìSTICO: Mostrando modal de √©xito con mensaje:', mensaje);
            
            // Mostrar modal de √©xito
            if (typeof window.showSuccessModal === 'function') {
                window.showSuccessModal(mensaje);
            } else {
                // Fallback si el modal no est√° disponible
                mostrarMensaje('success', mensaje);
            }
            
            cargarRoles(); // Recargar para actualizar estado
            return;
        }

        var cambio = cambios[indice];
        console.log('üîç DIAGN√ìSTICO: Procesando cambio #' + (indice + 1) + ':', cambio);
        
        var url = cambio.accion === 'asignar' ?
            '@Url.Action("AsignarRol", "DatosPersonales")' :
            '@Url.Action("RemoverRol", "DatosPersonales")';

        console.log('üîç DIAGN√ìSTICO: URL de la petici√≥n:', url);
        console.log('üîç DIAGN√ìSTICO: Datos a enviar:', {
            idEmpleado: empleadoId,
            nombreRol: cambio.rol
        });

        $.ajax({
            url: url,
            type: 'POST',
            data: {
                idEmpleado: empleadoId,
                nombreRol: cambio.rol,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            },
            success: function(response) {
                console.log('üîç DIAGN√ìSTICO: Respuesta AJAX recibida para cambio #' + (indice + 1) + ':', response);
                if (response.success) {
                    console.log('‚úÖ √âXITO: Cambio #' + (indice + 1) + ' aplicado correctamente');
                    
                    // Verificar si se requiere refresh de la sesi√≥n del usuario afectado
                    if (response.requiresRefresh) {
                        console.log('üîÑ Rol modificado - sesi√≥n del usuario afectado invalidada');
                    }

                    // Continuar con el siguiente cambio
                    console.log('üîç DIAGN√ìSTICO: Continuando con el siguiente cambio...');
                    procesarCambios(cambios, indice + 1);
                } else {
                    console.error('‚ùå ERROR: Fallo en cambio #' + (indice + 1) + ':', response.message);
                    // Error en este cambio
                    $('input[type="checkbox"], #btn-confirmar, #btn-cancelar').prop('disabled', false);
                    
                    // ‚ú® NUEVO: Mostrar modal de error
                    var errorMessage = 'Error al ' + cambio.accion + ' el rol ' + cambio.rol + ': ' + response.message;
                    if (typeof window.showErrorModal === 'function') {
                        window.showErrorModal(errorMessage);
                    } else {
                        mostrarMensaje('danger', errorMessage);
                    }
                }
            },
            error: function(xhr, status, error) {
                console.error('‚ùå ERROR: Error AJAX en cambio #' + (indice + 1) + ':', status, error);
                console.error('‚ùå ERROR: Respuesta del servidor:', xhr.responseText);
                $('input[type="checkbox"], #btn-confirmar, #btn-cancelar').prop('disabled', false);
                
                // ‚ú® NUEVO: Mostrar modal de error
                var errorMessage = 'Error al ' + cambio.accion + ' el rol ' + cambio.rol + '.';
                if (typeof window.showErrorModal === 'function') {
                    window.showErrorModal(errorMessage);
                } else {
                    mostrarMensaje('danger', errorMessage);
                }
            }
        });
    }
});
</script> 