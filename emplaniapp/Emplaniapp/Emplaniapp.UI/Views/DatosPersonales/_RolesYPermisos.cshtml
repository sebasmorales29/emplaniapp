                    <div class="role-checkbox-item">
                        <label class="role-label" for="rol-Contador">
                            <input type="checkbox" id="rol-Contador" value="Contador">
                            Contador
                        </label>
                    </div>

                    <div class="role-checkbox-item">
                        <label class="role-label" for="rol-Empleado">
                            <input type="checkbox" id="rol-Empleado" value="Empleado">
                            Empleado
                        </label>
                    </div>

                    <!-- Botones de acci칩n -->
                    <div class="botones-accion">
                        <button type="button" id="btn-cancelar" class="btn btn-outline-secondary">
                            Cancelar
                        </button>
                        <button type="button" id="btn-confirmar" class="btn btn-primary">
                            <i class="fa fa-check"></i> Confirmar Cambios
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

