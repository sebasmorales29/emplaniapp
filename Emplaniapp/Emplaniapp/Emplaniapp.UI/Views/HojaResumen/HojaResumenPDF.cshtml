@model IEnumerable<Emplaniapp.Abstracciones.ModelosParaUI.HojaResumenDto>
@{
    Layout = null;
    var fecha = DateTime.Now;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hoja Resumen - @fecha.ToString("dd/MM/yyyy")</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12px;
            margin: 24px;
        }

        h1 {
            font-size: 20px;
            margin-bottom: 6px;
        }

        .sub {
            color: #555;
            margin-top: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 6px;
            text-align: left;
        }

        th {
            background: #f5f5f5;
        }

        .right {
            text-align: right;
        }

        .badge {
            display: inline-block;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 11px;
        }

        .ok {
            background: #198754;
            color: #fff;
        }

        .warn {
            background: #fd7e14;
            color: #fff;
        }

        .err {
            background: #dc3545;
            color: #fff;
        }

        .footer {
            margin-top: 16px;
            font-size: 11px;
            color: #888;
        }
    </style>
</head>
<body>
    <h1>Hoja Resumen</h1>
    <p class="sub">Generado: @fecha.ToString("dd/MM/yyyy HH:mm")</p>

    <table>
        <thead>
            <tr>
                <th>Empleado</th>
                <th class="right">Salario Aprobado</th>
                <th class="right">Remuneraciones</th>
                <th class="right">Retenciones</th>
                <th class="right">Salario Neto</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var r in Model)
                {
                    var estadoCss = r.nombreEstado == "Aprobado" ? "ok" : (r.nombreEstado == "Pendiente" ? "warn" : "err");
                    <tr>
                        <td>
                            <strong>@r.NombreEmpleado</strong><br />
                            <small>Céd: @r.Cedula</small>
                        </td>
                        <td class="right">@r.SalarioAprobado.ToString("N2")</td>
                        <td class="right">@r.TotalRemuneraciones.ToString("N2")</td>
                        <td class="right">@r.TotalRetenciones.ToString("N2")</td>
                        <td class="right"><strong>@r.SalarioNeto.ToString("N2")</strong></td>
                        <td><span class="badge @estadoCss">@r.nombreEstado</span></td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6">No hay datos para mostrar.</td></tr>
            }
        </tbody>
    </table>

    <div class="footer">
        Documento generado por Emplaniapp.
    </div>
</body>
</html>
