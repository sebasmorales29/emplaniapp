<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Emplaniapp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden; /* Prevenir scroll en la p√°gina principal */
        }

        .login-page-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .login-main-content {
            display: flex;
            flex-grow: 1;
            height: calc(100% - 40px); /* Resta la altura del footer */
        }

        .login-form-section {
            width: 50%;
            padding: 2rem 4rem;
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow-y: auto; /* Scroll si el formulario es muy largo */
        }
        
        .login-branding-section {
            width: 50%;
            position: relative; /* Para posicionar la imagen */
            overflow: hidden;
        }

        .login-branding-section img {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* La clave para que se comporte como fondo */
        }

        .login-form-content {
            width: 100%;
            max-width: 400px;
        }

        .login-footer {
            background-color: #4a87c7;
            color: white;
            text-align: center;
            padding: 10px 0;
            height: 40px;
            font-size: 12px;
            position: relative;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="login-page-container">
        <div class="login-main-content">
        <div class="login-form-section">
            <div class="login-form-content">
                @RenderBody()
            </div>
        </div>
        <div class="login-branding-section">
                <img src="@Url.Content("~/Content/images/imagenuno.webp")" alt="Branding Image" />
            </div>
        </div>
        <footer class="login-footer">
            Emplaniapp @DateTime.Now.Year - Todos los derechos reservados
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html> 