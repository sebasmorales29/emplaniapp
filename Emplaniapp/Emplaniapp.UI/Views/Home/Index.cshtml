@{
    ViewBag.Title = "Inicio - Suplidora Royal Ltda.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Evita barras de scroll solo en el contenedor de bienvenida */
    html, body {
        margin: 0;
        padding: 0;
    }

    .welcome-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100vh - 64px - 40px); /* navbar (64px) + footer (40px aprox.) */
        background: #f7f9fb;
        padding: 1rem;
        overflow: hidden;
    }

    .welcome-text {
        flex: 1;
        max-width: 650px;
        padding: 2rem;
    }

        .welcome-text h1 {
            font-size: 2.55rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .welcome-text p {
            font-size: 1.25rem;
            line-height: 1.6;
            color: #555;
        }

    .welcome-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

        .welcome-image img {
            max-width: 100%;
            max-height: 80vh;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
</style>

<main>
    <div class="welcome-container">
        <div class="welcome-text">
            <h1>Bienvenidos a Suplidora Royal</h1>
            <p>
                Somos una empresa líder, especializada en el mercado de las mascotas domésticas,
                con más de 35 años de experiencia.
            </p>
        </div>
        <div class="welcome-image">
            <img src="https://medismart.net/wp-content/uploads/2023/06/suplidora-royal.jpg"
                 alt="Logo de Suplidora Royal Ltda.">
        </div>
    </div>
</main>
