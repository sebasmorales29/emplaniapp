@model IEnumerable<Emplaniapp.Abstracciones.ModelosParaUI.EmpleadoDto>

@{
    ViewBag.Title = "Lista de Empleados";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">Empleados</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var empleado in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@empleado.nombre @empleado.primerApellido @empleado.segundoApellido</h5>
                            <p class="card-text text-muted mb-1">
                                <strong>Puesto:</strong> @empleado.Puesto
                            </p>
                            <p class="card-text text-muted mb-1">
                                <strong>Departamento:</strong> @empleado.Departamento
                            </p>
                            <p class="card-text text-muted mb-1">
                                <strong>Email:</strong> @empleado.correoInstitucional
                            </p>
                            <p class="card-text text-muted">
                                <strong>Teléfono:</strong> @empleado.numeroTelefonico
                            </p>
                        </div>
                        <div class="mt-3 d-flex justify-content-between">
                            <a href="@Url.Action("Detalles", "Empleado", new { id = empleado.idEmpleado })" class="btn btn-outline-primary btn-sm rounded-pill px-3">Ver</a>
                            <a href="@Url.Action("Editar", "Empleado", new { id = empleado.idEmpleado })" class="btn btn-outline-secondary btn-sm rounded-pill px-3">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
