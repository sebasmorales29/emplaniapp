@{
    ViewBag.Title = "Enlace enviado";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    html, body {
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .confirmation-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 50px 40px;
        max-width: 450px;
        width: 100%;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

        .confirmation-card img {
            width: 70px;
            height: 70px;
            margin-bottom: 20px;
            border-radius: 16px;
        }

    .confirmation-title {
        font-size: 26px;
        font-weight: 700;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 12px;
    }

    .confirmation-message {
        font-size: 16px;
        color: #374151;
        margin-bottom: 24px;
    }

    .back-link {
        font-size: 14px;
        color: #4a87c7;
        font-weight: 500;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="confirmation-card">
    <img src="https://medismart.net/wp-content/uploads/2023/06/suplidora-royal.jpg" alt="Logo EmplaniApp" />
    <div class="confirmation-title">¡Revisa tu correo!</div>
    <p class="confirmation-message">
        Te hemos enviado un enlace para restablecer tu contraseña.<br />
        Si no lo ves, revisa tu bandeja de spam o promociones.
    </p>
    @Html.ActionLink("Volver al inicio de sesión", "Login", "Account", null, new { @class = "back-link" })
</div>
