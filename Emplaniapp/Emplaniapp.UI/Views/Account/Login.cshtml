@model Emplaniapp.UI.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";  // seguimos usando el layout
}

<style>
    .login-row {
        height: 100vh;
        margin: 0;
    }

    .login-form-col {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-img-col {
        background: url('https://th.bing.com/th/id/R.0e0ef1388b39166a3617baa7c6ea4fd2?rik=OhuQGUXe7hfe5g&pid=ImgRaw&r=0') no-repeat center center;
        background-size: cover;
        height: 100vh; 
        width: 50vw; 
        position: fixed; 
        top: 0;
        right: 0;
        z-index: -1; 
    }

    .login-form-wrapper {
        width: 50vw; 
        padding-left: 5vw; 
    }
</style>

<div class="login-img-col"></div>

<div class="container-fluid p-0">
    <div class="row login-row">
        <!-- Sólo la mitad izquierda para el formulario -->
        <div class="col-6 login-form-col">
            <div class="login-form-wrapper">
                <div class="text-center mb-4">
                    <img src="https://www.emojiall.com/images/240/lg/1f5c1.png"
                         alt="Logo" style="height:50px;" />
                    <h3 class="mt-3">Iniciar Sesión</h3>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, "Usuario")
                        @Html.TextBoxFor(m => m.UserName,
                            new { @class = "form-control", placeholder = "Usuario" })
                        @Html.ValidationMessageFor(m => m.UserName,
                            "", new { @class = "text-danger" })
                    </div>

                    <!-- Aquí quitamos el input-group -->
                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Password, "Contraseña")
                        @Html.PasswordFor(m => m.Password,
                            new { @class = "form-control", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.Password,
                            "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group form-check mt-3">
                        @Html.CheckBoxFor(m => m.RememberMe,
                            new { @class = "form-check-input", id = "RememberMe" })
                        @Html.LabelFor(m => m.RememberMe,
                            "¿Recordar mi contraseña?",
                            new { @class = "form-check-label" })
                    </div>

                    <div class="mt-3">
                        @Html.ActionLink("¿No recuerdas tu contraseña? Ingresa aquí",
                            "ForgotPassword", "Account")
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit"
                                class="btn btn-primary btn-lg w-50">
                            Ingresar
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
