@model Emplaniapp.UI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Recuperar contraseña";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    html, body {
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        overflow: hidden;
    }

    .forgot-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
    }

    .forgot-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 50px 40px;
        max-width: 450px;
        width: 100%;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .forgot-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(74, 135, 199, 0.3);
    }

        .forgot-logo img {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            object-fit: cover;
        }

    h1 {
        font-size: 28px;
        font-weight: 700;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 8px;
    }

    .forgot-subtitle {
        color: #64748b;
        font-size: 16px;
        margin-bottom: 24px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 16px;
        font-size: 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            outline: none;
            border-color: #4a87c7;
            box-shadow: 0 0 0 3px rgba(74, 135, 199, 0.1);
        }

    .btn-submit {
        width: 100%;
        background: linear-gradient(135deg, #4a87c7 0%, #5b9bd5 100%);
        color: white;
        padding: 16px;
        border: none;
        font-size: 16px;
        font-weight: 600;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            box-shadow: 0 15px 35px rgba(74, 135, 199, 0.4);
            transform: translateY(-2px);
        }

    .validation-summary {
        background: #fee2e2;
        color: #b91c1c;
        padding: 16px;
        margin-bottom: 24px;
        border-radius: 12px;
        font-size: 14px;
    }

    .form-footer {
        margin-top: 24px;
        font-size: 14px;
    }

        .form-footer a {
            color: #4a87c7;
            font-weight: 500;
            text-decoration: none;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="forgot-container">
    <div class="forgot-card">
        <div class="forgot-logo">
            <img src="https://medismart.net/wp-content/uploads/2023/06/suplidora-royal.jpg" alt="Logo">
        </div>
        <h1>EmplaniApp</h1>
        <p class="forgot-subtitle">Ingresa tu correo para recuperar tu contraseña</p>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    @Html.ValidationSummary(true)
                </div>
            }

            <div class="form-group">
                <label class="form-label" for="Email">Correo electrónico</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "usuario@ejemplo.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
            </div>

            <button type="submit" class="btn-submit">Enviar enlace</button>
        }

        <div class="form-footer">
            ¿Ya tienes cuenta? @Html.ActionLink("Inicia sesión", "Login", "Account")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
