@using Emplaniapp.Abstracciones.ModelosParaUI;
@model Tuple<List<TipoRemuneracionDto>, List<TipoRetencionDto>>

@{
    ViewBag.Title = "Variables Financieras";
}

<style>
    .card-header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px; 
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .btn-block {
        width: 100%;
        margin-bottom: 5px;
    }

</style>

<h1>Variables Financieras</h1>
<br />
<br />

<div class="row">
    <!-- Remuneraciones Card -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-flex">
                <h3>Remuneraciones</h3>
                @Html.ActionLink("Agregar", "CreateRemu", null, new { @class = "btn btn-primary" })
            </div>
            <div class="card-body">
                <table id="TablaTipoRemuneraciones" class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Tipo")</th>
                            <th>@Html.DisplayName("Valor %")</th>
                            <th>@Html.DisplayName("Estado")</th>
                            <th>@Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombreTipoRemuneracion)</td>
                                <td>@Html.DisplayFor(modelItem => item.porcentajeRemuneracion)</td>
                                <td>@Html.DisplayFor(modelItem => item.idEstado)</td>
                                <td>
                                    @Html.ActionLink("Editar", "EditRemu", new { id = item.Id }, new { @class = "btn btn-sm btn-primary btn-block" })
                                    @Html.ActionLink("Eliminar", "DeleteRemu", new { id = item.Id }, new { @class = "btn btn-sm btn-danger btn-block" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Retenciones Card -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-flex">
                <h3>Retenciones</h3>
                @Html.ActionLink("Agregar", "CreateReten", null, new { @class = "btn btn-primary" })
            </div>
            <div class="card-body">
                <table id="TablaTipoRetenciones" class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Tipo")</th>
                            <th>@Html.DisplayName("Valor %")</th>
                            <th>@Html.DisplayName("Estado")</th>
                            <th>@Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item2)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombreTipoRetencion)</td>
                                <td>@Html.DisplayFor(modelItem => item.porcentajeRetencion)</td>
                                <td>@Html.DisplayFor(modelItem => item.idEstado)</td>
                                <td>
                                    @Html.ActionLink("Editar", "EditReten", new { id = item.Id }, new { @class = "btn btn-sm btn-primary btn-block" })
                                    @Html.ActionLink("Eliminar", "DeleteReten", new { id = item.Id }, new { @class = "btn btn-sm btn-danger btn-block" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
